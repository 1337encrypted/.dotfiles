<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">

    <menu id="root-menu" label="Openbox 3">
        <item label="Terminal">
            <action name="Execute">
				<!-- <command>alacritty \-\-config-file ~/.config/alacritty/alacritty_openbox.toml</command> -->
				<command>kitty</command>
            </action>
            <icon>utilities-terminal</icon>
        </item>
        <item label="Firefox">
            <action name="Execute">
                <command>firefox</command>
            </action>
            <icon>web-browser</icon>
        </item>
        <item label="qBittorrent">
            <action name="Execute">
                <command>qbittorrent</command>
            </action>
            <icon>network-workgroup</icon>
        </item>
        <item label="Steam">
            <action name="Execute">
                <command>steam</command>
            </action>
            <icon>games</icon>
        </item>
        <item label="Neovim">
            <action name="Execute">
                <command>alacritty -e nvim</command>
            </action>
            <icon>text-editor</icon>
        </item>
        <separator/>
        <item label="Counter Strike">
            <action name="Execute">
                <command>./Desktop/CSS/start.sh</command>
            </action>
            <icon>games</icon>
        </item>
        <separator/>
        <item label="Openbox Configuration Manager">
            <action name="Execute">
                <command>obconf</command>
            </action>
            <icon>preferences-desktop</icon>
        </item>
        <separator/>
        <item label="Reconfigure">
            <action name="Reconfigure"/>
            <icon>view-refresh</icon>
        </item>
        <item label="Restart">
            <action name="Restart"/>
            <icon>system-reboot</icon>
        </item>
        <item label="Exit">
            <action name="Exit"/>
            <icon>system-log-out</icon>
        </item>
    </menu>

</openbox_menu>

